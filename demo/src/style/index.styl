@import '_reset';

body {
  
}

#video,
#canvas {
  position: absolute;
  top: 0;
  left: 0;
}

#banana {
  position: relative;
}

#canvas {
  width: 600px;
  height: 480px;
  z-index: 9999;
}

#video {
  display: none;
  width: 100%;
  height: 100%;
}

#container {
  width: 640px;
  height: 480px;
  position: fixed;
  top: 0;
  perspective: 50px;
}

#prompt {
  color: #00ff62;
  // transform: translate3d(-50%, -50%, 0);
  font-size: 120px;
  font-family: 'ComicSansMS-Bold';
  transform: translate3d(-50%, -50%, 0);
  position: absolute;
  left: 50%;
  top: 50%;
}

table {
  position: absolute;
  top: 0;
  left: 0;
}

table, th, td {
  border: 1px solid #00ff62;
}

td {
  padding: 10px;
  color: #00ff62;
}

.loading {
  position: fixed;
  width: 100%;
  height: 100%;
  background: gray;
  color: blue;
  font-size: 32px;
  top: 0;
  left: 0;
  z-index: 99999;
}

#go {
  color: #fff;
  background: green;
  font-size: 24px;
  padding: 15px;
  cursor: pointer;
}