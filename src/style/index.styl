@import '_reset';

body {
  
}

#video,
#canvas {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

#video {
  display: none;
}

#container {
  width: 640px;
  height: 480px;
  position: fixed;
  top: 0;
  perspective: 50px;
}

#prompt {
  color: #00ff62;
  // transform: translate3d(-50%, -50%, 0);
  font-size: 120px;
  font-family: 'ComicSansMS-Bold';
  transform: translate3d(-50%, -50%, 0);
  position: absolute;
  left: 50%;
  top: 50%;
}

table {
  position: absolute;
  top: 0;
  left: 0;
}

table, th, td {
  border: 1px solid #00ff62;
}

td {
  padding: 10px;
  color: #00ff62;
}